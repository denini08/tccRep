<!DOCTYPE html>
<html lang="pt-br">
<head>
        <% include include/head.ejs %> 
        <title>Sistema TCC</title>
</head>
<body>
        <% include include/header.ejs %> 
       
        <main class="container form form-group">
            <form action="/tcc/teste" method="POST">  
                
                <div class="form-group">
                    <label for="titulo">Título</label>
                    <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Titulo do TCC" required>
                </div>
                
                <div class="form-group">
                    <label for="tema">Tema</label>
                    <input type="text" id="tema" name="tema" class="form-control" placeholder="Tema" required>
                </div>

                <div class="form-group">
                        <label for="palavras-chave">Palavras-chave</label>
                        <input type="text" id="tema" name="palavras-chave" class="form-control" placeholder="Palavras-chave" required>
                        <small id="textHelp" class="form-text text-muted">Separe por VÍRGULA.</small>
                </div>

                <div class="form-group">
                    <label for="autor">Autor</label>
                    <input type="text" id="autor" name="autor" class="form-control" placeholder="Autor" required>   
                </div>
                <div class="divisao-coluna">
                    <div class="form-group completar-campo">
                        <label for="orientadores">Orientador</label>
                        <input class="col-8 form-group form-control " type="text" placeholder="1" id="orientadores1">
                        <input class="col-8 form-group form-control " type="text" placeholder="2" id="orientadores2">
                        <input class="col-8 form-group form-control " type="text" placeholder="3" id="orientadores3">
                    </div>
    
                    <div class="form-group completar-campo">
                        <label for="coorientador">Co-orientador</label>
                        <input class="col-8 form-group form-control " type="text" placeholder="1" id="coorientador1">
                        <input class="col-8 form-group form-control " type="text" placeholder="2" id="coorientador2">
                        <input class="col-8 form-group form-control " type="text" placeholder="3" id="coorientador3">
                    </div>
                </div>
                
                <div class=" divisao-coluna">
                    <div class="form-group completar-campo">
                        <label for="curso">Curso</label>
                        <select name="curso" class="form-control col-8">
                                <option selected>Selecione</option>
                                <option value="Sistemas de Informação">Sistemas de Informação</option>
                                <option value="Administração">Administração</option>
                        </select>
                    </div>
                    <div class="form-group completar-campo">
                        <label for="semestre">Semestre</label>
                        <select name="semestre" class="form-control col-4">
                            <option selected>Selecione</option>
                            <option value="1">XXXX.1</option>
                            <option value="2">XXXX.2</option>
                        </select>
                    </div>
                    <div class="form-group completar-campo">
                        <label for="ano">Ano</label>
                        <input class="form-control col-6" type="text" id="ano" required="required" name="ano" placeholder="Ano de Conclusão"/>
                    </div>
                </div>

                <div class="form-group custom-file col-4">
                    <input type="file" class="custom-file-input lang" id="customFile" lang="pt-br">
                    <label id="nome_input_arquivo" class="custom-file-label" for="customFile">Arquivo TCC</label>
                    <small>Faça o upload do seu arquivo</small>
                    <br><br>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-info">Enviar</button>
                </div>   
            </form>   

            <%if(mensagem != null) {%>
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Muito bem!</h4>
                    <p><%= mensagem %></p>
                    <hr>    
                </div> 
                <% } %> 
        </main>

        <% include include/footer.ejs %>
        <% include include/scripts.ejs %>
    </body>
</html>